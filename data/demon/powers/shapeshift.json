{
  "name": "Shapeshift",
  "description": "You turn into a pig for 5 minutes",
  "type": "origins:multiple",

  "activate": {
    "type": "origins:toggle",
    "active_by_default": false,
    "retain_state": false,
    "key": {
      "key": "key.origins.secondary_active"
    }
  },

  "toggle": {
    "type": "origins:action_over_time",
    "condition": {
      "type": "origins:power_active",
      "power": "*:*_activate"
    },
    "rising_action": {
      "type": "origins:execute_command",
      "command": "function demon:shapeshift_start"
    },
    "falling_action": {
      "type": "origins:execute_command",
      "command": "function demon:shapeshift_end"
    },
    "interval": 20
  },

  "invisibility": {
    "type": "origins:invisibility",
    "render_armor": false,
    "condition": {
      "type": "origins:power_active",
      "power": "*:*_activate"
    }
  }
}
